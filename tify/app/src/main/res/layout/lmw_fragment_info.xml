<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="40dp"
    tools:context=".Minwoo.Fragment.InfoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="left"
            android:text="Store Information"
            android:textColor="@color/TextColor"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="운영시간"
                    android:textStyle="bold"
                    android:textColor="@color/TextColor"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="전화번호"
                    android:textStyle="bold"
                    android:textColor="@color/TextColor"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:text="주소"
                    android:textColor="@color/TextColor"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="매장소개"
                    android:textColor="@color/TextColor"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fragment_Info_TV_sTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="평일, 토요일 15:00~24:00"
                    android:textColor="@color/SubColor"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/fragment_Info_TV_sTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="전화번호"
                    android:textColor="@color/SubColor"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/fragment_Info_TV_sAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="서울 강남"
                    android:textColor="@color/SubColor"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/fragment_Info_TV_sComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="카페입니다."
                    android:textColor="@color/SubColor"
                    android:textSize="15dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>