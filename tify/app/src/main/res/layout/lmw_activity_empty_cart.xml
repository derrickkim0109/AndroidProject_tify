<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Minwoo.Activity.EmptyCartActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#16000000"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/activity_EmptyCart_TV_Content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="2"
                android:gravity="center"
                android:text="  아직 준비할 커피가 없네요 \n 카페인 충전하러 가시겠어요?"
                />
        </LinearLayout>

        <Button
            android:id="@+id/activity_EmptyCart_Btn_OrderNow"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="주문하러 가기"
            android:textColor="@color/white"
            android:backgroundTint="@color/mainColor"/>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">
        <include
            layout="@layout/cha_bottom_bar"
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></include>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>