<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Taehyun.Activity.Mypage_CardRegistrationActivity"
    android:orientation="vertical"
    android:background="@color/color_background"
    >



            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/cardBox_color"
                android:layout_width="300dp"
                android:layout_height="178dp"
                android:elevation="5dp"
                app:cardCornerRadius="8dp"
                >

            <ImageView
                android:id="@+id/cardBox_cardMagnetic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="44dp"
                android:src="@drawable/magnetic"

                />

            <ImageView
                android:id="@+id/cardBox_Company"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="230dp"
                android:src="@drawable/mastercard"
                />


                <TextView
                    android:id="@+id/cardBox_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="75dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/card_number"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                android:id="@+id/cardBox_AMEX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="AMERICAN EXPRESS"
                android:textColor="@color/white"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:visibility="invisible"
                />


            <TextView
                android:id="@+id/cardBox_Vaild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/date"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="200dp"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/cardBox_cMM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="205dp"
                android:fontFamily="sans-serif"
                android:text="04"
                android:textColor="@color/white"
                android:textSize="13dp" />
                <TextView
                android:id="@+id/cardBox_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="220dp"
                android:fontFamily="sans-serif"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="13dp" />
             <TextView
                android:id="@+id/cardBox_cYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="225dp"
                android:fontFamily="sans-serif"
                android:text="24"
                android:textColor="@color/white"
                android:textSize="13dp" />



            </androidx.cardview.widget.CardView>






</LinearLayout>