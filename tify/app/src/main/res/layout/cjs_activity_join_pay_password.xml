                android:textColor="@color/white"
                android:backgroundTint="#706E6E"


                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
            <Button
                android:id="@+id/join_pay_btn0"
                android:layout_width="0px"
